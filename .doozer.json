{
  "targets": {
    "raspbian-jessie": {
      "buildenv": "raspbian-jessie",
      "builddeps": ["build-essential", "cmake", "wget"],
      "buildcmd": [
      	"uname -a",
      	"cd",
      	"wget https://github.com/Kitware/CMake/releases/download/v3.14.0/cmake-3.14.0.tar.gz",
      	"tar xfz cmake-3.14.0.tar.gz",
      	"cd cmake-3.14.0",
      	"./bootstrap",
      	"make -j8",
      	"cd",
      	"mkdir build",
      	"cd build",
      	"../cmake-3.14.0/bin/cmake /project/repo/checkout",
      	"make -j8",
      	"ctest -VV -j4 --timeout 3000"
      ]
    },
    "fedora24-x86_64": {
      "buildenv": "fedora24-x86_64",
      "builddeps": ["cmake", "make", "gcc gcc-c++"],
      "buildcmd": [
      	"uname -a",
      	"cd",
      	"mkdir build",
      	"cd build",
      	"cmake /project/repo/checkout",
      	"make -j8",
      	"ctest -VV -j8"
      ]
    },
    "centos7-x86_64": {
      "buildenv": "centos7-x86_64",
      "builddeps": ["cmake", "make", "wget", "gcc-c++"],
      "buildcmd": [
      	"uname -a",
      	"cd",
      	"wget https://github.com/Kitware/CMake/releases/download/v3.14.0/cmake-3.14.0.tar.gz",
      	"tar xfz cmake-3.14.0.tar.gz",
      	"cd cmake-3.14.0",
      	"./bootstrap",
      	"make -j8",
      	"cd",
      	"mkdir build",
      	"cd build",
      	"../cmake-3.14.0/bin/cmake /project/repo/checkout",
      	"make -j8",
      	"ctest -VV -j8"
      ]
    }
  }
}
